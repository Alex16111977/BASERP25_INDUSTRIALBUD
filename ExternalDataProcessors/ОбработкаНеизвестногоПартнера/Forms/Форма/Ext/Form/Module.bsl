&НаСервере
Функция ОбработатьРегистраторДляРегистра(СтрокаТаблицы)

	// Объект - это документ-регистратор
	Ссылка = СтрокаТаблицы.Объект;

	Если НЕ ЗначениеЗаполнено(Ссылка) Тогда
		СтрокаТаблицы.Ошибка = "Пустая ссылка на документ-регистратор";
		Возврат Ложь;
	КонецЕсли;

	// Проверяем что это документ
	Если НЕ Документы.ТипВсеСсылки().СодержитТип(ТипЗнч(Ссылка)) Тогда
		СтрокаТаблицы.Ошибка = "Объект не является документом";
		Возврат Ложь;
	КонецЕсли;

	// Получаем объект документа
	ДокументОбъект = Ссылка.ПолучитьОбъект();

	Если ДокументОбъект = Неопределено Тогда
		СтрокаТаблицы.Ошибка = "Документ не найден";
		Возврат Ложь;
	КонецЕсли;

	// Получаем контрагента из документа для определения партнера
	КонтрагентДокумента = Неопределено;

	// Сначала пытаемся по контрагенту из таблицы
	Если ЗначениеЗаполнено(СтрокаТаблицы.Контрагент) Тогда
		КонтрагентДокумента = СтрокаТаблицы.Контрагент;
	Иначе
		// Ищем контрагента в документе
		КонтрагентДокумента = ПолучитьКонтрагентаИзДокумента(Ссылка);
		Если ЗначениеЗаполнено(КонтрагентДокумента) Тогда
			СтрокаТаблицы.Контрагент = КонтрагентДокумента;
		КонецЕсли;
	КонецЕсли;

	// Определяем нового партнера по контрагенту документа
	НовыйПартнерПоУмолчанию = Неопределено;
	Если ЗначениеЗаполнено(КонтрагентДокумента) Тогда
		НовыйПартнерПоУмолчанию = ПолучитьПартнераПоКонтрагенту(КонтрагентДокумента);
	КонецЕсли;

	Если НЕ ЗначениеЗаполнено(НовыйПартнерПоУмолчанию) Тогда
		СтрокаТаблицы.Ошибка = "Не удалось определить нового партнера по контрагенту";
		Возврат Ложь;
	КонецЕсли;

	Изменен = Ложь;

	// Получаем метаданные документа
	МетаданныеДокумента = ДокументОбъект.Метаданные();
	ТипПартнер = Тип("СправочникСсылка.Партнеры");

	// 1. Обрабатываем реквизиты шапки (включая Партнер)
	Для Каждого Реквизит Из МетаданныеДокумента.Реквизиты Цикл
		Если СодержитТипПартнер(Реквизит.Тип, ТипПартнер) Тогда
			ТекущееЗначение = ДокументОбъект[Реквизит.Имя];
			Если ЭтоНеизвестныйПартнер(ТекущееЗначение) Тогда
				ДокументОбъект[Реквизит.Имя] = НовыйПартнерПоУмолчанию;
				Изменен = Истина;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;

	// 2. КРИТИЧНО: Обрабатываем табличные части
	// Именно здесь хранится Партнер для регистра ДвиженияДенежныеСредстваКонтрагент
	// (в ТЧ РасшифровкаПлатежа.Партнер)
	Для Каждого ТабличнаяЧасть Из МетаданныеДокумента.ТабличныеЧасти Цикл

		// Ищем все реквизиты с типом Партнер в табличной части
		РеквизитыПартнер = Новый Массив;
		РеквизитКонтрагент = Неопределено;

		Для Каждого РеквизитТЧ Из ТабличнаяЧасть.Реквизиты Цикл
			Если СодержитТипПартнер(РеквизитТЧ.Тип, ТипПартнер) Тогда
				РеквизитыПартнер.Добавить(РеквизитТЧ.Имя);
			КонецЕсли;
			// Запоминаем реквизит Контрагент если есть
			Если НРег(РеквизитТЧ.Имя) = "контрагент" Тогда
				РеквизитКонтрагент = РеквизитТЧ.Имя;
			КонецЕсли;
		КонецЦикла;

		// Если в ТЧ есть реквизиты типа Партнер - обрабатываем строки
		Если РеквизитыПартнер.Количество() > 0 Тогда
			Для Каждого СтрокаТЧ Из ДокументОбъект[ТабличнаяЧасть.Имя] Цикл

				// Определяем партнера для этой строки
				НовыйПартнерДляСтроки = НовыйПартнерПоУмолчанию;

				// Если в ТЧ есть свой контрагент - определяем партнера по нему
				Если РеквизитКонтрагент <> Неопределено Тогда
					КонтрагентСтроки = СтрокаТЧ[РеквизитКонтрагент];
					Если ЗначениеЗаполнено(КонтрагентСтроки) Тогда
						ПартнерПоКонтрагентуСтроки = ПолучитьПартнераПоКонтрагенту(КонтрагентСтроки);
						Если ЗначениеЗаполнено(ПартнерПоКонтрагентуСтроки) Тогда
							НовыйПартнерДляСтроки = ПартнерПоКонтрагентуСтроки;
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;

				// Заменяем все реквизиты Партнер в строке
				Для Каждого ИмяРеквизита Из РеквизитыПартнер Цикл
					ТекущееЗначение = СтрокаТЧ[ИмяРеквизита];
					Если ЭтоНеизвестныйПартнер(ТекущееЗначение) Тогда
						СтрокаТЧ[ИмяРеквизита] = НовыйПартнерДляСтроки;
						Изменен = Истина;
					КонецЕсли;
				КонецЦикла;

			КонецЦикла;
		КонецЕсли;

	КонецЦикла;

	// 3. ЗАПИСЫВАЕМ И ПЕРЕПРОВОДИМ ДОКУМЕНТ
	// Это обновит движения по регистрам!
	Если Изменен Тогда

		СтрокаТаблицы.НовыйПартнер = НовыйПартнерПоУмолчанию;

		Если ДокументОбъект.Проведен Тогда
			// ПЕРЕПРОВОДИМ - это обновит регистры!
			ДокументОбъект.Записать(РежимЗаписиДокумента.Проведение);
		Иначе
			ДокументОбъект.ОбменДанными.Загрузка = Истина;
			ДокументОбъект.Записать();
		КонецЕсли;

		Возврат Истина;

	ИначеЕсли ДокументОбъект.Проведен Тогда
		// Документ не изменен, но может требоваться перепроведение
		// (если неизвестный партнер был только в движениях регистра)
		СтрокаТаблицы.Ошибка = "Партнер в документе не найден - проверьте ТЧ РасшифровкаПлатежа";
		Возврат Ложь;
	КонецЕсли;

	СтрокаТаблицы.Ошибка = "Документ не изменен - неизвестный партнер не найден в реквизитах";
	Возврат Ложь;

КонецФункции

// Проверяет является ли партнер "неизвестным" (равен НеизвестныйПартнер, пустой или с наименованием "Неизвестный партнер")
&НаСервере
Функция ЭтоНеизвестныйПартнер(Партнер)

	// Пустой партнер - тоже считаем неизвестным
	Если НЕ ЗначениеЗаполнено(Партнер) Тогда
		Возврат Истина;
	КонецЕсли;

	// Точное сравнение со ссылкой НеизвестныйПартнер
	Если Партнер = НеизвестныйПартнер Тогда
		Возврат Истина;
	КонецЕсли;

	// Проверка по наименованию (на случай разных элементов с таким именем)
	Попытка
		Если ТипЗнч(Партнер) = Тип("СправочникСсылка.Партнеры") Тогда
			НаименованиеПартнера = Партнер.Наименование;
			Если НРег(СокрЛП(НаименованиеПартнера)) = "неизвестный партнер" Тогда
				Возврат Истина;
			КонецЕсли;
		КонецЕсли;
	Исключение
	КонецПопытки;

	Возврат Ложь;

КонецФункции

&НаСервере
Функция ОбработатьОбъектУниверсально(СтрокаТаблицы)

	Ссылка = СтрокаТаблицы.Объект;

	Если НЕ ЗначениеЗаполнено(Ссылка) Тогда
		СтрокаТаблицы.Ошибка = "Пустая ссылка на объект";
		Возврат Ложь;
	КонецЕсли;

	// Получаем объект
	ОбъектДанных = Ссылка.ПолучитьОбъект();

	Если ОбъектДанных = Неопределено Тогда
		СтрокаТаблицы.Ошибка = "Объект не найден";
		Возврат Ложь;
	КонецЕсли;

	// Определяем нового партнера по контрагенту
	НовыйПартнер = Неопределено;
	Если ЗначениеЗаполнено(СтрокаТаблицы.Контрагент) Тогда
		НовыйПартнер = ПолучитьПартнераПоКонтрагенту(СтрокаТаблицы.Контрагент);
	КонецЕсли;

	// Если контрагент не указан в таблице - пробуем найти в объекте
	Если НЕ ЗначениеЗаполнено(НовыйПартнер) Тогда
		// Для документов пробуем найти контрагента
		Если СтрокаТаблицы.КатегорияОбъекта = "Документ" Тогда
			КонтрагентИзДокумента = ПолучитьКонтрагентаИзДокумента(Ссылка);
			Если ЗначениеЗаполнено(КонтрагентИзДокумента) Тогда
				НовыйПартнер = ПолучитьПартнераПоКонтрагенту(КонтрагентИзДокумента);
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;

	Если НЕ ЗначениеЗаполнено(НовыйПартнер) Тогда
		СтрокаТаблицы.Ошибка = "Не удалось определить нового партнера по контрагенту";
		Возврат Ложь;
	КонецЕсли;

	Изменен = Ложь;

	// Получаем метаданные объекта
	МетаданныеОбъекта = ОбъектДанных.Метаданные();
	ТипПартнер = Тип("СправочникСсылка.Партнеры");

	// 1. Обрабатываем реквизиты шапки
	Для Каждого Реквизит Из МетаданныеОбъекта.Реквизиты Цикл
		Если СодержитТипПартнер(Реквизит.Тип, ТипПартнер) Тогда
			ТекущееЗначение = ОбъектДанных[Реквизит.Имя];
			Если ЭтоНеизвестныйПартнер(ТекущееЗначение) Тогда
				ОбъектДанных[Реквизит.Имя] = НовыйПартнер;
				Изменен = Истина;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;

	// 2. Обрабатываем табличные части
	Для Каждого ТабличнаяЧасть Из МетаданныеОбъекта.ТабличныеЧасти Цикл

		// Ищем все реквизиты с типом Партнер и Контрагент в табличной части
		РеквизитыПартнер = Новый Массив;
		РеквизитКонтрагент = Неопределено;

		Для Каждого РеквизитТЧ Из ТабличнаяЧасть.Реквизиты Цикл
			Если СодержитТипПартнер(РеквизитТЧ.Тип, ТипПартнер) Тогда
				РеквизитыПартнер.Добавить(РеквизитТЧ.Имя);
			КонецЕсли;
			Если НРег(РеквизитТЧ.Имя) = "контрагент" Тогда
				РеквизитКонтрагент = РеквизитТЧ.Имя;
			КонецЕсли;
		КонецЦикла;

		// Если в ТЧ есть реквизиты типа Партнер - обрабатываем строки
		Если РеквизитыПартнер.Количество() > 0 Тогда
			Для Каждого СтрокаТЧ Из ОбъектДанных[ТабличнаяЧасть.Имя] Цикл

				// Определяем партнера для этой строки
				НовыйПартнерДляСтроки = НовыйПартнер;

				// Если в ТЧ есть свой контрагент - определяем партнера по нему
				Если РеквизитКонтрагент <> Неопределено Тогда
					КонтрагентСтроки = СтрокаТЧ[РеквизитКонтрагент];
					Если ЗначениеЗаполнено(КонтрагентСтроки) Тогда
						ПартнерПоКонтрагентуСтроки = ПолучитьПартнераПоКонтрагенту(КонтрагентСтроки);
						Если ЗначениеЗаполнено(ПартнерПоКонтрагентуСтроки) Тогда
							НовыйПартнерДляСтроки = ПартнерПоКонтрагентуСтроки;
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;

				// Заменяем все реквизиты Партнер в строке
				Для Каждого ИмяРеквизита Из РеквизитыПартнер Цикл
					ТекущееЗначение = СтрокаТЧ[ИмяРеквизита];
					Если ЭтоНеизвестныйПартнер(ТекущееЗначение) Тогда
						СтрокаТЧ[ИмяРеквизита] = НовыйПартнерДляСтроки;
						Изменен = Истина;
					КонецЕсли;
				КонецЦикла;

			КонецЦикла;
		КонецЕсли;

	КонецЦикла;

	// 3. Записываем объект
	Если Изменен Тогда

		СтрокаТаблицы.НовыйПартнер = НовыйПартнер;

		// Для документов - с перепроведением
		Если СтрокаТаблицы.КатегорияОбъекта = "Документ" И СтрокаТаблицы.Проведен Тогда
			ОбъектДанных.Записать(РежимЗаписиДокумента.Проведение);
		Иначе
			ОбъектДанных.ОбменДанными.Загрузка = Истина;
			ОбъектДанных.Записать();
		КонецЕсли;

		Возврат Истина;

	КонецЕсли;

	СтрокаТаблицы.Ошибка = "Неизвестный партнер не найден в реквизитах объекта";
	Возврат Ложь;

КонецФункции

&НаСервере
Функция ОбработатьРегистрСведенийУниверсально(СтрокаТаблицы)
	
	// Получаем имя регистра из типа объекта
	ИмяРегистра = СтрЗаменить(СтрокаТаблицы.ТипОбъекта, "РегистрСведений.", "");
	
	МетаданныеРегистра = Метаданные.РегистрыСведений[ИмяРегистра];
	
	Если МетаданныеРегистра = Неопределено Тогда
		СтрокаТаблицы.Ошибка = "Регистр не найден в метаданных";
		Возврат Ложь;
	КонецЕсли;
	
	// Проверяем режим записи
	Если МетаданныеРегистра.РежимЗаписи = Метаданные.СвойстваОбъектов.РежимЗаписиРегистра.ПодчинениеРегистратору Тогда
		// Записи подчинены регистратору - обработаем документ
		Если ЗначениеЗаполнено(СтрокаТаблицы.Объект) Тогда
			Возврат ОбработатьРегистраторДляРегистра(СтрокаТаблицы);
		Иначе
			СтрокаТаблицы.Ошибка = "Регистр подчинен регистратору - нет ссылки на документ";
			Возврат Ложь;
		КонецЕсли;
	КонецЕсли;
	
	// Для независимых регистров
	СтрокаТаблицы.Ошибка = "Независимый регистр - требуется ручная обработка";
	Возврат Ложь;
	
КонецФункции

