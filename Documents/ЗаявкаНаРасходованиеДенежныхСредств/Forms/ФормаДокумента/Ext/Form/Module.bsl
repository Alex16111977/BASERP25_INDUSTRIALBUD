	ОплатаНаличная = СписокВыбора.Добавить("Наличная", НСтр("ru='Наличными';uk='Готівкою'"));
	ОплатаБезналичная = СписокВыбора.Добавить("Безналичная", НСтр("ru='Безналичными';uk='Безготівковими'"));
