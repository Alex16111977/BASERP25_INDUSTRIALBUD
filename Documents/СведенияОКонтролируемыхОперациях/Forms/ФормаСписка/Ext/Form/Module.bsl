Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	// СтандартныеПодсистемы.ПодключаемыеКоманды
	ПодключаемыеКоманды.ПриСозданииНаСервере(ЭтотОбъект);
	// Конец СтандартныеПодсистемы.ПодключаемыеКоманды
	
	Если Параметры.Свойство("Организация") Тогда
	    Организация = Параметры.Организация;
		ОбщегоНазначенияКлиентСервер.УстановитьЭлементОтбораДинамическогоСписка(Список, "Организация", Параметры.Организация, ВидСравненияКомпоновкиДанных.Равно,, Истина);
	КонецЕсли;
		
	Если Параметры.Свойство("Год") Тогда
	    Год = Параметры.Год;
		ОбщегоНазначенияКлиентСервер.УстановитьЭлементОтбораДинамическогоСписка(Список, "НачПериода",  Дата(Год,1,1), ВидСравненияКомпоновкиДанных.БольшеИлиРавно,, Истина);
		ОбщегоНазначенияКлиентСервер.УстановитьЭлементОтбораДинамическогоСписка(Список, "НачПериода",  Дата(Год+1,1,1), ВидСравненияКомпоновкиДанных.Меньше,, Истина);
	КонецЕсли;

КонецПроцедуры

