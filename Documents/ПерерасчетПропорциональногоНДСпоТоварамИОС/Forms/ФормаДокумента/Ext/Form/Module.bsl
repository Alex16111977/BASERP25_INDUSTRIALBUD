	Запрос.УстановитьПараметр("ВидПоставки", Перечисления.ВидыПоставки.Поставка);
	Запрос.УстановитьПараметр("ВидПоставкиВозврат", Перечисления.ВидыПоставки.Возврат);
	Запрос.УстановитьПараметр("НачПериода", НачПериода);
	
	Запрос.Текст = "
