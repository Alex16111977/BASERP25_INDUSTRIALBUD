	ТабличнаяЧасть = ТабличнаяЧастьПоИмени(ИмяТЧ, ЭтаФорма);
	
	ОбеспечениеСервер.ЗаполнитьРеквизитВКоллекции(
		ТабличнаяЧасть, 
		"ДатаОтгрузки", 
		ДатаОтгрузки, 
		МассивВыделенныхСтрок);

