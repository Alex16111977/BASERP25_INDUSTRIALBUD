&НаКлиентеНаСервереБезКонтекста
Процедура ПересчитатьПоля(ТекущиеДанные, Знач ПоляПересчета, Знач ДанныеРаздела, Знач ИспользоватьРазделы, КоэффициентПропорциональногоОтнесенияНДСНаОбязательства = 0)	
	
	ПоляПересчета = НРег(ПоляПересчета);
	Если СтрНайти(ПоляПересчета, "суммапошлины")>0 Тогда
		Если ИспользоватьРазделы Тогда
			ТекущиеДанные.СтавкаПошлины = ДанныеРаздела.СтавкаПошлины;
		КонецЕсли;
		ТекущиеДанные.СуммаПошлины = ТекущиеДанные.ТаможеннаяСтоимость * ТекущиеДанные.СтавкаПошлины / 100.;
	ИначеЕсли СтрНайти(ПоляПересчета, "ставкапошлины")>0 Тогда
		ТекущиеДанные.СтавкаПошлины =
			100. * ?(ТекущиеДанные.ТаможеннаяСтоимость=0., 0., ТекущиеДанные.СуммаПошлины / ТекущиеДанные.ТаможеннаяСтоимость);
	КонецЕсли;
	Если Найти(ПоляПересчета, "суммаакциза")>0 Тогда
		Если ИспользоватьРазделы Тогда
			ТекущиеДанные.СтавкаАкциза = ДанныеРаздела.СтавкаАкциза;
		КонецЕсли;
		ТекущиеДанные.СуммаАкциза = ТекущиеДанные.ТаможеннаяСтоимость * ТекущиеДанные.СтавкаАкциза / 100.;
	ИначеЕсли Найти(ПоляПересчета, "ставкаакциза")>0 Тогда
		ТекущиеДанные.СтавкаАкциза =
			100. * ?(ТекущиеДанные.ТаможеннаяСтоимость=0., 0., ТекущиеДанные.СуммаАкциза / ТекущиеДанные.ТаможеннаяСтоимость);
	КонецЕсли;
	Если СтрНайти(ПоляПересчета, "суммандс")>0 Тогда
		Если ИспользоватьРазделы Тогда
			ТекущиеДанные.СтавкаНДС = ДанныеРаздела.СтавкаНДС;
		КонецЕсли;
		ТекущиеДанные.СуммаНДС =
			ЦенообразованиеКлиентСервер.РассчитатьСуммуНДС(
				ТекущиеДанные.ТаможеннаяСтоимость + ТекущиеДанные.СуммаПошлины + ТекущиеДанные.СуммаАкциза,
				ТекущиеДанные.СтавкаНДС,
				Ложь);
	КонецЕсли;
	Если СтрНайти(ПоляПересчета, "ндспропорционально")>0 Тогда
		Если ТекущиеДанные.НалоговоеНазначение = ПредопределенноеЗначение("Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_Пропорционально") Тогда
			ТекущиеДанные.СуммаНДСПропорционально = ТекущиеДанные.СуммаНДС * КоэффициентПропорциональногоОтнесенияНДСНаОбязательства;
		Иначе
			ТекущиеДанные.СуммаНДСПропорционально = 0;
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры

