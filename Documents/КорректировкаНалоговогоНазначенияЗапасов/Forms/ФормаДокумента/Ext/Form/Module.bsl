&НаСервере
Процедура АктуализироватьНовоеНалоговоеНазначение(ПроверитьКорректность = Истина)
	
	ПараметрыЗаполнения = УчетНДСУПКлиентСервер.ПараметрыЗаполненияНалоговогоНазначения();
	ПараметрыЗаполнения.Организация = Объект.Организация;
	ПараметрыЗаполнения.Дата = Объект.Дата;
	ПараметрыЗаполнения.КорректировкаНалоговогоНазначения = Истина;
	
	Если ПроверитьКорректность Тогда
		
		УчетНДСУП.ЗаполнитьНалоговоеНазначение(
			Объект.НовоеНалоговоеНазначение, 
			ПараметрыЗаполнения,
			УчетНДСКэшированныеЗначенияПараметров
        );
		
	КонецЕсли;
	
	УчетНДСУП.ЗаполнитьСписокВыбораНалоговыхНазначений(
		Элементы.НовоеНалоговоеНазначение, 
		Объект.НовоеНалоговоеНазначение, 
		ПараметрыЗаполнения, 
		УчетНДСКэшированныеЗначенияПараметров
    );
	
