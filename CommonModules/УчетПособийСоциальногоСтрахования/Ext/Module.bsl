			Если ПериодНачисления = НачалоМесяца(ЗаписьРасчета.ДатаНачала) Или ПериодНачисления = Дата(1, 1, 1) Тогда
				УжеНачисленоВДокументе = УжеНачисленоВДокументе + Результат * ?(Сторно, -1, 1);    
			Иначе                         
				УжеНачисленоВДокументе = Результат * ?(Сторно, -1, 1); 
			КонецЕсли;	
			НачисленоВсего = УжеНачисленоВДокументе + НачисленоВПериодеПоДругимДокументам; 
			
			ПериодНачисления = НачалоМесяца(ЗаписьРасчета.ДатаНачала);
			
