	Иначе
		РазностьЛет = 0;
		РазностьМесяцев = 0;                                      
	КонецЕсли;
	
	Возврат Новый Структура("РазностьЛет,РазностьМесяцев", РазностьЛет, РазностьМесяцев);
	
