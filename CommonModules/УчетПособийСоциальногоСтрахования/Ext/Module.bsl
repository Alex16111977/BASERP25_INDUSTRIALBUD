// Составляет соответствие размеров предельной величины базы страховых взносов, 
//	действующих на указанные годы.
//
// Параметры:
//	Годы - массив элементов типа число.
//
// Возвращаемое значение - соответствие, где ключом является год, а значением - размер предельной величины.
//
Функция ПредельнаяВеличинаБазыСтраховыхВзносов(Месяцы, Организация = Неопределено) Экспорт
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
	
	СоздатьВТПредельнаяВеличинаБазы(Запрос.МенеджерВременныхТаблиц, Месяцы, Организация);
	
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ПредельнаяВеличинаБазыСтраховыхВзносов.Месяц КАК Месяц,
	|	ПредельнаяВеличинаБазыСтраховыхВзносов.Размер КАК Размер
	|ИЗ
	|	ВТПредельнаяВеличинаБазы КАК ПредельнаяВеличинаБазыСтраховыхВзносов
	|АВТОУПОРЯДОЧИВАНИЕ";
	
	Выборка = Запрос.Выполнить().Выбрать();
	
	ПредельнаяВеличина = Новый Соответствие;
	Пока Выборка.Следующий() Цикл
		ПредельнаяВеличина.Вставить(Выборка.Месяц, Выборка.Размер);
	КонецЦикла;
	
	Возврат ПредельнаяВеличина;
	
КонецФункции

Функция ПредельнаяВеличинаБазыСтраховыхВзносовПоФизическомуЛицу(Сотрудник, Месяцы, ФизическоеЛицо, Организация, ДатаНачалаСобытия) Экспорт

	ИзмеренияДаты = Новый ТаблицаЗначений;
	ИзмеренияДаты.Колонки.Добавить("Период", Новый ОписаниеТипов("Дата"));
	ИзмеренияДаты.Колонки.Добавить("ВидЕСВ", Новый ОписаниеТипов("ПеречислениеСсылка.ВидыЕСВ"));
	
	Для Каждого Месяц Из Месяцы Цикл
		СтрокаИзмеренияДаты = ИзмеренияДаты.Добавить();
		СтрокаИзмеренияДаты.Период = Месяц;
		СтрокаИзмеренияДаты.ВидЕСВ = Перечисления.ВидыЕСВ.ОсновнаяЗарплата;
	КонецЦикла;
	
	РезидентДияСити = Ложь;
	СрезСпецРежимов = РегистрыСведений.СпециальныеРежимыЗарплатаКадры.СрезПоследних(ДатаНачалаСобытия, Новый Структура("Организация", Организация));
	Если СрезСпецРежимов.Количество() > 0 И СрезСпецРежимов[0].РезидентДияСити Тогда      
	   	РезидентДияСити = Истина    
	КонецЕсли;    
	
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
	Запрос.УстановитьПараметр("ИзмеренияДаты", ИзмеренияДаты);   
	Запрос.УстановитьПараметр("ФизическоеЛицо", ФизическоеЛицо);
	Запрос.Текст = 
	
	"ВЫБРАТЬ
	|	ИзмеренияДаты.Период КАК Период,
	|	ИзмеренияДаты.ВидЕСВ КАК ВидЕСВ
	|ПОМЕСТИТЬ ВТИзмеренияДаты
	|ИЗ
	|	&ИзмеренияДаты КАК ИзмеренияДаты
	|";
	
	Запрос.Выполнить();
	
	Если Не РезидентДияСити Тогда
		Запрос.Текст = "
		|ВЫБРАТЬ
		|	ИсчисленныеСтраховыеВзносы.НалоговыйПериод КАК Месяц,
		|	МАКСИМУМ(ИсчисленныеСтраховыеВзносы.Предел) КАК Предел
		|ПОМЕСТИТЬ ВТПределыСтраховыхВзносовПоФизическомуЛицу
		|ИЗ
		|	РегистрНакопления.ИсчисленныеСтраховыеВзносы КАК ИсчисленныеСтраховыеВзносы
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ВТИзмеренияДаты КАК ИзмеренияДаты
		|		ПО ИсчисленныеСтраховыеВзносы.НалоговыйПериод = ИзмеренияДаты.Период
		|			И (ИсчисленныеСтраховыеВзносы.ФизическоеЛицо = &ФизическоеЛицо)
		|
		|СГРУППИРОВАТЬ ПО
		|	ИсчисленныеСтраховыеВзносы.НалоговыйПериод
		|";  
		Запрос.Выполнить();
	КонецЕсли;
	
	ЗарплатаКадрыОбщиеНаборыДанных.СоздатьВТИмяРегистраСрезПоследних(
		"ПределыСтраховыхВзносов",
		Запрос.МенеджерВременныхТаблиц,
		Ложь,
		ЗарплатаКадрыОбщиеНаборыДанных.ОписаниеФильтраДляСоздатьВТИмяРегистра("ВТИзмеренияДаты","ВидЕСВ"));

	Если РезидентДияСити Тогда         
		Месяц = Дата(1, 1, 1);
		Запрос.Текст = "
		|ВЫБРАТЬ
		|	МАКСИМУМ(Периоды.Период) КАК Месяц
		|ИЗ ВТИзмеренияДаты КАК Периоды
		|";
		Выборка = Запрос.Выполнить().Выбрать();	
		
		Если Выборка.Следующий() Тогда
			Месяц = Выборка.Месяц;	
		КонецЕсли;
			
		Запрос.Текст = "
		|ВЫБРАТЬ
		|	ИсчисленныеСтраховыеВзносы.НалоговыйПериод КАК Месяц,
		|	СУММА(ИсчисленныеСтраховыеВзносы.БазаВзноса) КАК ПределБаза,
		|   МАКСИМУМ(ИсчисленныеСтраховыеВзносы.Предел) КАК Предел
		|ПОМЕСТИТЬ ВТПределыСтраховыхВзносовПоФизическомуЛицу
		|ИЗ
		|	РегистрНакопления.ИсчисленныеСтраховыеВзносы КАК ИсчисленныеСтраховыеВзносы
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ВТИзмеренияДаты КАК ИзмеренияДаты
		|		ПО ИсчисленныеСтраховыеВзносы.НалоговыйПериод = ИзмеренияДаты.Период
		|			И (ИсчисленныеСтраховыеВзносы.ФизическоеЛицо = &ФизическоеЛицо)
		|СГРУППИРОВАТЬ ПО
		|	ИсчисленныеСтраховыеВзносы.НалоговыйПериод
		|";   
		Запрос.Выполнить();
		
		ДатаПриемаСотрудника = Неопределено;
	
		КадровыеДанные = КадровыйУчет.КадровыеДанныеСотрудников(Истина, Сотрудник, "ДатаПриема", ДатаНачалаСобытия);
		Если Не КадровыеДанные.Количество() = 0 Тогда 
			
			ДатаПриемаСотрудника = КадровыеДанные[0].ДатаПриема; 
			Если НачалоМесяца(ДатаПриемаСотрудника) = НачалоМесяца(ДобавитьМесяц(ДатаНачалаСобытия, -1)) Тогда
				Месяц = НачалоМесяца(ДатаПриемаСотрудника)
			КонецЕсли;	
			ПредельнаяВеличина = УчетПособийСоциальногоСтрахования.ПредельнаяВеличинаБазыСтраховыхВзносовПоФизическомуЛицуДияСити(Месяц, Организация, ФизическоеЛицо);
			Если Не ПредельнаяВеличина.Количество() = 0 Тогда   
				Запрос.Текст = "
				|ВЫБРАТЬ 
				|	&Месяц КАК Месяц,
				|	&Размер КАК Размер
				|ПОМЕСТИТЬ ВТБазаЕСВЗаПоследнийМесяц 
				|";
				Запрос.УстановитьПараметр("Размер", ПредельнаяВеличина.Получить(Месяц));
				Запрос.УстановитьПараметр("Месяц",  Месяц);
				Запрос.Выполнить();
				БазаЕСВДияСитиЗаПоследнийМесяц = Истина;
			КонецЕсли	
		КонецЕсли;
	КонецЕсли;

	Если РезидентДияСити И Не ПредельнаяВеличина.Количество() = 0 Тогда
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	ИзмеренияДаты.Период КАК Месяц,
		|	ВЫБОР 
		|		КОГДА ЕСТЬNULL(БазаЕСВЗаПоследнийМесяц.Размер, 0) = 0  
		|			ТОГДА 
		|           ВЫБОР
		|				КОГДА ЕСТЬNULL(ПределыСтраховыхВзносовПоФизическомуЛицу.Предел, 0) = 0
		|					ТОГДА 
		|						ВЫБОР КОГДА	ЕСТЬNULL(ПределыСтраховыхВзносов.ПределДия, 0) = 0
		|							ТОГДА ЕСТЬNULL(ПределыСтраховыхВзносов.Предел, 0) 
		|						ИНАЧЕ ЕСТЬNULL(ПределыСтраховыхВзносов.ПределДия, 0) 
		|					КОНЕЦ	
		|				ИНАЧЕ 
		|					ВЫБОР КОГДА ЕСТЬNULL(ПределыСтраховыхВзносовПоФизическомуЛицу.Месяц, ДАТАВРЕМЯ(1, 1, 1)) = &Месяц 
		|						ТОГДА ЕСТЬNULL(ПределыСтраховыхВзносовПоФизическомуЛицу.ПределБаза, 0)
		|                   ИНАЧЕ
		|						ЕСТЬNULL(ПределыСтраховыхВзносовПоФизическомуЛицу.Предел,0)
		|                   КОНЕЦ
		|           КОНЕЦ
		|   ИНАЧЕ
		|   	БазаЕСВЗаПоследнийМесяц.Размер
		|	КОНЕЦ КАК Размер
		|ИЗ
		|	ВТИзмеренияДаты КАК ИзмеренияДаты
		|		ЛЕВОЕ СОЕДИНЕНИЕ ВТПределыСтраховыхВзносовПоФизическомуЛицу КАК ПределыСтраховыхВзносовПоФизическомуЛицу
		|		ПО ИзмеренияДаты.Период = ПределыСтраховыхВзносовПоФизическомуЛицу.Месяц
		|		ЛЕВОЕ СОЕДИНЕНИЕ ВТПределыСтраховыхВзносовСрезПоследних КАК ПределыСтраховыхВзносов
		|		ПО ИзмеренияДаты.Период = ПределыСтраховыхВзносов.Период  
		|		ЛЕВОЕ СОЕДИНЕНИЕ ВТБазаЕСВЗаПоследнийМесяц КАК БазаЕСВЗаПоследнийМесяц
		|		ПО ИзмеренияДаты.Период = БазаЕСВЗаПоследнийМесяц.Месяц 
		|АВТОУПОРЯДОЧИВАНИЕ
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|УНИЧТОЖИТЬ ВТИзмеренияДаты;
		|////////////////////////////////////////////////////////////////////////////////
		|УНИЧТОЖИТЬ  ВТПределыСтраховыхВзносовСрезПоследних
		|"; 
	ИначеЕсли РезидентДияСити И ПредельнаяВеличина.Количество() = 0 Тогда
		Запрос.Текст = 
		"ВЫБРАТЬ    
		|	ИзмеренияДаты.Период КАК Месяц,
		|	ВЫБОР КОГДА	ЕСТЬNULL(ПределыСтраховыхВзносов.ПределДия, 0) = 0
		|		ТОГДА ЕСТЬNULL(ПределыСтраховыхВзносов.Предел, 0) 
		|	ИНАЧЕ ЕСТЬNULL(ПределыСтраховыхВзносов.ПределДия, 0) 
		|	КОНЕЦ	
		|КАК Размер
		|ИЗ
		|	ВТИзмеренияДаты КАК ИзмеренияДаты
		|		ЛЕВОЕ СОЕДИНЕНИЕ ВТПределыСтраховыхВзносовСрезПоследних КАК ПределыСтраховыхВзносов
		|		ПО ИзмеренияДаты.Период = ПределыСтраховыхВзносов.Период  
		|АВТОУПОРЯДОЧИВАНИЕ
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|УНИЧТОЖИТЬ ВТИзмеренияДаты;
		|////////////////////////////////////////////////////////////////////////////////
		|УНИЧТОЖИТЬ  ВТПределыСтраховыхВзносовСрезПоследних
		|";
	Иначе	
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	ИзмеренияДаты.Период КАК Месяц,
		|	ВЫБОР
		|		КОГДА ЕСТЬNULL(ПределыСтраховыхВзносовПоФизическомуЛицу.Предел, 0) = 0
		|			ТОГДА ЕСТЬNULL(ПределыСтраховыхВзносов.Предел, 0)
		|		ИНАЧЕ ПределыСтраховыхВзносовПоФизическомуЛицу.Предел
		|	КОНЕЦ КАК Размер
		|ИЗ
		|	ВТИзмеренияДаты КАК ИзмеренияДаты
		|		ЛЕВОЕ СОЕДИНЕНИЕ ВТПределыСтраховыхВзносовПоФизическомуЛицу КАК ПределыСтраховыхВзносовПоФизическомуЛицу
		|		ПО ИзмеренияДаты.Период = ПределыСтраховыхВзносовПоФизическомуЛицу.Месяц
		|		ЛЕВОЕ СОЕДИНЕНИЕ ВТПределыСтраховыхВзносовСрезПоследних КАК ПределыСтраховыхВзносов
		|		ПО ИзмеренияДаты.Период = ПределыСтраховыхВзносов.Период
		|АВТОУПОРЯДОЧИВАНИЕ
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|УНИЧТОЖИТЬ ВТИзмеренияДаты;
		|////////////////////////////////////////////////////////////////////////////////
		|УНИЧТОЖИТЬ  ВТПределыСтраховыхВзносовСрезПоследних
		|";
	КонецЕсли;
	Выборка = Запрос.Выполнить().Выбрать();
	
	ПредельнаяВеличина = Новый Соответствие;
	Пока Выборка.Следующий() Цикл
		ПредельнаяВеличина.Вставить(Выборка.Месяц, Выборка.Размер);
	КонецЦикла;
	
	Возврат ПредельнаяВеличина;
	
