			<Settings xsi:type="DynamicList">
				<ManualQuery>true</ManualQuery>
				<DynamicDataRead>false</DynamicDataRead>
				<QueryText>ВЫБРАТЬ
	Т_Счет.Ссылка,
	Т_Счет.ПометкаУдаления,
	Т_Счет.Номер,
	Т_Счет.Дата,
	Т_Счет.Проведен,
	Т_Счет.Подразделение,
