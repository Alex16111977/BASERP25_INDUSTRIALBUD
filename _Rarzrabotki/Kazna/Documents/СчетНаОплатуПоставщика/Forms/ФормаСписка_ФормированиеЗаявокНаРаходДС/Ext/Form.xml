	Т_Счет.Контрагент,
	Т_Счет.СчетКонтрагента,
	Т_Счет.Организация,
	Т_Счет.СуммаДокумента,
	Т_Счет.ПлановаяДатаОплаты,
	Т_Счет.Приоритет,
	Т_Счет.ВалютаДокумента,
	Т_Счет.Комментарий,
	Т_Счет.Ответственный,
	Т_Счет.ВидОплаты,
	Т_Счет.Задача,
	Т_Счет.СтатьяЗатрат,
	Т_Счет.НазначениеПлатежа,
	Т_Счет.Виза_Причина,
	Т_Счет.Виза_ТекущаяРоль,
	Т_Счет.Виза_ТекущиеВизирующие,
	Т_Счет.Виза_Дата,
	Т_Счет.Виза_Состояние,
	Т_Счет.Автор,
	Т_Счет.ДатаСоздания,
	ЕСТЬNULL(Т_Лимит.СуммаОстаток, 0) КАК Лимит,
	ВЫБОР
		КОГДА ЕСТЬNULL(Т_КОплате.СуммаОстаток, 0) &gt; 0
			ТОГДА Т_КОплате.СуммаОстаток
		ИНАЧЕ 0
	КОНЕЦ КАК КОплате,
	ВЫБОР
		КОГДА Т_Счет.Проведен
				И ЕСТЬNULL(Т_КОплате.СуммаОстаток, 0) &gt; 0
			ТОГДА ИСТИНА
		ИНАЧЕ ЛОЖЬ
	КОНЕЦ КАК ТребуетЗаявкиНаРсходДС
ИЗ
	Документ.СчетНаОплатуПоставщика КАК Т_Счет
		ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.СчетаПоставщиков.Остатки КАК Т_КОплате
		ПО (Т_КОплате.СчетНаОплатуПоставщика = Т_Счет.Ссылка)
		ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.ЛимитыДДС.Остатки КАК Т_Лимит
		ПО Т_Счет.СтатьяДвиженияДенежныхСредств = Т_Лимит.СтатьяДвиженияДенежныхСредств
			И Т_Счет.ВидОплаты = Т_Лимит.ВидОплаты
			И Т_Счет.Организация = Т_Лимит.Организация
			И Т_Счет.Подразделение = Т_Лимит.Подразделение</QueryText>
				<MainTable>Document.СчетНаОплатуПоставщика</MainTable>
