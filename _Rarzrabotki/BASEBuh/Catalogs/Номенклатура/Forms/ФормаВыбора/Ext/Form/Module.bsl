&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	// СтандартныеПодсистемы.ПодключаемыеКоманды
	ПодключаемыеКоманды.ПриСозданииНаСервере(ЭтотОбъект);
	// Конец СтандартныеПодсистемы.ПодключаемыеКоманды
	
	Если ЗначениеЗаполнено(Параметры.Заголовок) Тогда
		
		АвтоЗаголовок = Ложь;
		Если Параметры.Заголовок = "Товары" Тогда
			ТекстЗаголовок = НСтр("ru='Товары';uk= 'Товари'");
		ИначеЕсли Параметры.Заголовок = "Услуги" Тогда
			ТекстЗаголовок = НСтр("ru='Услуги';uk= 'Послуги'");
		ИначеЕсли Параметры.Заголовок = "Возвратная тара" Тогда
			ТекстЗаголовок = НСтр("ru='Возвратная тара';uk= 'Зворотна тара'"); 
		ИначеЕсли Параметры.Заголовок = "Товары на комиссии" Тогда
			ТекстЗаголовок = НСтр("ru='Товары на комиссии';uk='Товари на комісії'");
		ИначеЕсли Параметры.Заголовок = "Оборудование" Тогда
			ТекстЗаголовок = НСтр("ru='Оборудование';uk= 'Устаткування'");
		ИначеЕсли Параметры.Заголовок = "Продукция" Тогда
			ТекстЗаголовок = НСтр("ru='Продукция';uk= 'Продукція'");
		ИначеЕсли Параметры.Заголовок = "Материалы" Тогда
			ТекстЗаголовок = НСтр("ru='Материалы';uk= 'Матеріали'");
		ИначеЕсли Параметры.Заголовок = "Использованные материалы" Тогда
			ТекстЗаголовок = НСтр("ru='Использованные материалы';uk= 'Використані матеріали'");
		ИначеЕсли Параметры.Заголовок = "Возвращенные материалы" Тогда
			ТекстЗаголовок = НСтр("ru='Возвращенные материалы';uk= 'Повернуті матеріали'");
		ИначеЕсли Параметры.Заголовок = "Продукция(услуги по переработке)" Тогда
			ТекстЗаголовок = НСтр("ru='Продукция(услуги по переработке)';uk= 'Продукція(послуги з переробки)'");
		ИначеЕсли Параметры.Заголовок = "Материалы заказчика" Тогда
			ТекстЗаголовок = НСтр("ru='Материалы заказчика';uk= 'Матеріали замовника'");
		ИначеЕсли Параметры.Заголовок = "Бланки строгого учета" Тогда
			ТекстЗаголовок = НСтр("ru='Бланки строгого учета';uk= 'Бланки суворого обліку'");
		Иначе
			ТекстЗаголовок = Параметры.Заголовок;
		КонецЕсли;
		
		Заголовок = НСтр("ru='Номенклатура: ';uk='Номенклатура: '") + ТекстЗаголовок;
		
	КонецЕсли;
	
	Если Параметры.Свойство("НаименованиеПолное") И НЕ ПустаяСтрока(Параметры.НаименованиеПолное) Тогда
		Запрос = Новый Запрос;
		Запрос.УстановитьПараметр("НаименованиеПолное", Параметры.НаименованиеПолное);
		Запрос.Текст =
		"ВЫБРАТЬ
		|	Номенклатура.Ссылка
		|ИЗ
		|	Справочник.Номенклатура КАК Номенклатура
		|ГДЕ
		|	(ВЫРАЗИТЬ(Номенклатура.НаименованиеПолное КАК СТРОКА(80))) = &НаименованиеПолное";
		
		Выборка = Запрос.Выполнить().Выбрать();
		
		Если Выборка.Следующий() Тогда
			Элементы.Список.ТекущаяСтрока = Выборка.Ссылка;
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

